{
    "require": {
        "php": "^8.1",
        "psr/simple-cache": "^1.0|^2.0|^3.0",
        "type-lang/parser": "^1.5",
        "type-lang/printer": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "TypeLang\\Mapper\\": "../src",
            "TypeLang\\Mapper\\Bench\\": "src"
        }
    },
    "require-dev": {
        "cuyz/valinor": "^1.17",
        "jms/serializer": "^3.32",
        "phpbench/phpbench": "^1.4",
        "phpdocumentor/reflection-docblock": "^5.6",
        "phpdocumentor/type-resolver": "^1.10",
        "symfony/cache": "^5.4|^6.0|^7.0",
        "symfony/property-access": "^5.4|^6.0|^7.1",
        "symfony/serializer": "^5.4|^6.0|^7.1",
        "type-lang/phpdoc": "^1.0",
        "type-lang/phpdoc-standard-tags": "^1.0",
        "symfony/var-dumper": "^5.4|^6.0|^7.1"
    },
    "scripts": {
        "bench:base": "phpbench run --report=default --tag=current",
        "bench:instantiate": [
            "@bench:base --filter=benchInstantiate"
        ],
        "bench:extract": [
            "@bench:base --filter=benchExtract"
        ],
        "bench:normalize": [
            "@bench:base --filter=benchNormalization"
        ],
        "bench:denormalize": [
            "@bench:base --filter=benchDenormalization"
        ],
        "bench": [
            "@bench:instantiate",
            "@bench:extract",
            "@bench:normalize",
            "@bench:denormalize"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
